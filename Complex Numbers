package Lab;

import java.util.Scanner;

class Complex
{
    int real,img;
    public void getData()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter real and imaginary values :");
        real=sc.nextInt();
        img=sc.nextInt();
    }
    public void printData()
    {
        System.out.println(real+"+ i"+img);
    }
}
public class ComplexOperation {
    public static Complex add(Complex c1,Complex c2)
    {
        Complex c3= new Complex();
        c3.real=c1.real+c2.real;
        c3.img=c1.img+c2.img;
        return c3;
    }
    public static Complex multiply(Complex c1,Complex c2)
    {
        Complex c3= new Complex();
        c3.real=(c1.real*c2.real)-(c1.img*c2.img);
        c3.img=(c1.real*c2.real)+(c1.img*c2.img);
        return c3;
    }
    
    public static void compare(Complex c1,Complex c2)
    {
        if(c1.real==c2.real && c1.img==c2.img)
        {
            System.out.println("Both complex numbers are equal");
        }    
        else
            System.out.println("Both complex numbers are not equal");
    }
    public static void main(String[] args)
    {
        Complex c1= new Complex();
        c1.getData();
        c1.printData();
        Complex c2= new Complex();
        c2.getData();
        c2.printData();
        Complex c3= new Complex();
        Complex c4= new Complex();
        c3=add(c1, c2);
        c4=multiply(c1, c2);
        compare(c1, c2);
        c3.printData();
        c4.printData();
    }
}
